generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ProjectType {
  id            Int            @id @default(autoincrement())
  name          String         @unique
  commandsToRun CommandToRun[]
  filesToCopy   FileToCopy[]
}

model FileToCopy {
  id                   Int     @id @default(autoincrement())
  fileName             String  @unique
  filePath             String
  destinationDirectory String
  isTemplate           Boolean

  projectType ProjectType[]
}

model CommandToRun {
  id      Int    @id @default(autoincrement())
  command String

  projectType ProjectType[]
}
