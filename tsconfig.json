{
    "compilerOptions": {
        /* Language and Environment */
        "target": "ES2022",

        /* Modules */
        "module": "NodeNext",
        "rootDir": "./src",

        /* Emit */
        "outDir": "./build",

        /* Interop Constraints */
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Type Checking */
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["templates/*"]
}
